@model inmobilariaCeli.Models.Propietario
@{
    ViewData["Title"] = "Eliminar propietario";
}

<h2>Eliminar propietario</h2>

<div class="alert alert-warning">
    <p>¿Estás seguro de que querés eliminar al siguiente propietario?</p>
</div>

<div class="mb-3">
    <strong>Nombre:</strong> @Model.NombreCompleto<br />
    <strong>DNI:</strong> @Model.DNI<br />
    <strong>Email:</strong> @Model.Email<br />
    <strong>Teléfono:</strong> @Model.Telefono<br />
    <strong>Dirección:</strong> @Model.Direccion<br />
    <strong>Fecha de alta:</strong> @Model.FechaAlta.ToShortDateString()
</div>

<form asp-action="DeleteConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>