@model List<inmobilariaCeli.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}

<h2>Listado de propietarios</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Nuevo propietario</a>

<!-- ✅ Carteles de éxito o error -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Fecha Alta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NombreCompleto</td>
                <td>@p.DNI</td>
                <td>@p.Email</td>
                <td>@p.Telefono</td>
                <td>@p.Direccion</td>
                <td>@p.FechaAlta.ToShortDateString()</td>
                <td>
                    @if (User.IsInRole("Administrador"))
                    {

                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Editar</a>

                        @if (p.PuedeEliminar)
                        {
                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        }
                        else
                        {
                            <span class="text-muted">No se puede eliminar</span>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>