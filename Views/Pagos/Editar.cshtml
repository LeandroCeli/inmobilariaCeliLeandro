@model inmobilariaCeli.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">Editar Pago</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IdContrato" />

        <div class="mb-3">
            <label asp-for="NumeroPago" class="form-label">Número de Pago</label>
            <input asp-for="NumeroPago" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="FechaPago" class="form-label">Fecha</label>
            <input asp-for="FechaPago" type="date" class="form-control" />
            <span asp-validation-for="FechaPago" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Detalle" class="form-label">Detalle</label>
            <input asp-for="Detalle" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Importe" class="form-label">Importe</label>
            <input asp-for="Importe" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Pagado" class="form-label">Pagado</label>
            <select asp-for="Pagado" class="form-select">
                <option value="false">No</option>
                <option value="true">Sí</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Guardar cambios
        </button>
        <a href="@Url.Action("Index", "Pagos", new { idContrato = Model.IdContrato })" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
