@model inmobilariaCeli.Models.Pago
@{
    ViewData["Title"] = "Detalles del Pago";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">Detalles del Pago</h2>

    <div class="card shadow-sm p-3">
        <p><strong>N° Pago:</strong> @Model.NumeroPago</p>
        <p><strong>Fecha:</strong> @Model.FechaPago.ToShortDateString()</p>
        <p><strong>Detalle:</strong> @Model.Detalle</p>
        <p><strong>Importe:</strong> $@Model.Importe</p>
        <p><strong>Pagado:</strong> @(Model.Pagado ? "Sí" : "No")</p>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-warning">Editar</a>
        <a href="@Url.Action("Index", "Pagos", new { idContrato = Model.IdContrato })" class="btn btn-secondary">Volver</a>
    </div>
</div>
