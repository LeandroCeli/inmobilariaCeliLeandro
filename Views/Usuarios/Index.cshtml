@model List<inmobilariaCeli.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de usuarios";
}

<h2>Gestión de usuarios</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Foto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.NombreCompleto</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td>
                    @if (!string.IsNullOrEmpty(usuario.FotoPerfil))
                    {
                        <img src="@usuario.FotoPerfil" width="50" />
                    }
                    else
                    {
                        <span>Sin foto</span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@usuario.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Crear" class="btn btn-primary">Nuevo usuario</a> 