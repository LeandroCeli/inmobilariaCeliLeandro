@model inmobilariaCeli.Models.Usuario
@{
    ViewData["Title"] = "Mi perfil";
}

<h2>Mi perfil</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Nombre completo:</strong> @Model.NombreCompleto</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Rol:</strong> @Model.Rol</p>

        <p><strong>Foto de perfil:</strong></p>
        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
            <img src="@Model.FotoPerfil" alt="Foto de perfil" width="150" />
            <form asp-action="QuitarFoto" method="post">
                <button type="submit" class="btn btn-danger mt-2">Quitar foto</button>
            </form>
        }
        else
        {
            <p>No hay foto cargada.</p>
        }

        <form asp-action="CambiarFoto" method="post" enctype="multipart/form-data" class="mt-3">
            <div class="form-group">
                <label for="foto">Cambiar foto de perfil</label>
                <input type="file" name="foto" class="form-control" />
            </div>
            <button type="submit" class="btn btn-secondary mt-2">Subir nueva foto</button>
        </form>
    </div>
</div>

