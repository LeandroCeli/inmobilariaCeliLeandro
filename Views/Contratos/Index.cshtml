@model IEnumerable<inmobilariaCeli.Models.Contrato>

<h2>Listado de Contratos</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Propiedad</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Dep√≥sito</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.PropiedadDireccion</td> <!-- propiedad auxiliar -->
                <td>@contrato.InquilinoNombre</td>    <!-- propiedad auxiliar -->
                <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                <td>@contrato.MontoMensual.ToString("C")</td>
                <td>@contrato.Deposito.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Contratos/Details/@contrato.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" href="/Contratos/Edit/@contrato.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/Contratos/Delete/@contrato.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/Contratos/Create">Agregar nuevo contrato</a>