@model List<inmobilariaCeli.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
}

<h2>Listado de contratos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">Nuevo contrato</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Propiedad</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Monto mensual</th>
            <th>Depósito</th>
            <th>Ocupación</th>
            <th>Vigente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.InquilinoNombre</td>
                <td>@c.PropiedadDireccion</td>
                <td>@c.FechaInicio.ToShortDateString()</td>
                <td>@c.FechaFin.ToShortDateString()</td>
                <td>$@c.MontoMensual</td>
                <td>$@c.Deposito</td>
                <td>@c.TipoOcupacion</td>
                <td>@(c.Vigente ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>