@model List<inmobilariaCeli.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles";
}

<h2>Listado de inmuebles</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Nuevo inmueble</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Direcci√≥n</th>
            <th>Tipo</th>
            <th>Uso</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Propietario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Direccion</td>
                <td>@i.Tipo</td>
                <td>@i.Uso</td>
                <td>@i.Ambientes</td>
                <td>$@i.Precio</td>
                <td>@i.PropietarioNombre</td>
                <td>
                    @if (User.IsInRole("Administrador"))
                    {

                        <a asp-action="Editar" asp-route-id="@i.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@i.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>