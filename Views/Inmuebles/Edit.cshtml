@model inmobilariaCeli.Models.Inmueble

<h2>Editar Inmueble</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Uso"></label>
        <input asp-for="Uso" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ambientes"></label>
        <input asp-for="Ambientes" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdPropietario">Propietario</label>
        <select asp-for="IdPropietario" asp-items="ViewBag.Propietarios" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>