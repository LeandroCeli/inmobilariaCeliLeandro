@model inmobilariaCeli.Models.Inmueble
@{
    ViewData["Title"] = "Editar inmueble";
    var propietarios = ViewBag.Propietarios as List<inmobilariaCeli.Models.Propietario>;
}

<h2>Editar inmueble</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Uso"></label>
        <input asp-for="Uso" class="form-control" />
        <span asp-validation-for="Uso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ambientes"></label>
        <input asp-for="Ambientes" class="form-control" type="number" />
        <span asp-validation-for="Ambientes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdPropietario">Propietario</label>
        <select asp-for="IdPropietario" class="form-control" asp-items="@(new SelectList(propietarios, "Id", "NombreCompleto"))">
            <option value="">-- Seleccione --</option>
        </select>
        <span asp-validation-for="IdPropietario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}