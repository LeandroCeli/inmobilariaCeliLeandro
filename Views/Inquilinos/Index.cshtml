@model List<inmobilariaCeli.Models.Inquilino>
@{
    ViewData["Title"] = "Inquilinos";
}

<h2>Listado de inquilinos</h2>

<a asp-action="Crear" class="btn btn-primary mb-3">Nuevo inquilino</a>

<!-- ✅ Carteles de éxito o error -->
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.NombreCompleto</td>
                <td>@i.DNI</td>
                <td>@i.Email</td>
                <td>@i.Telefono</td>
                <td>

                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Editar" asp-route-id="@i.Id" class="btn btn-sm btn-warning">Editar</a>

                        @if (i.PuedeEliminar)
                        {
                            <a asp-action="Eliminar" asp-route-id="@i.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        }
                        else
                        {
                            <span class="text-muted">No se puede eliminar</span>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>