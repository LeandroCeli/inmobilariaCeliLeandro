@model IEnumerable<inmobilariaCeli.Models.Inquilino>

<h2>Inquilinos</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Inquilino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Fecha Alta</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.DNI</td>
            <td>@item.Apellido</td>
            <td>@item.Nombre</td>
            <td>@item.Email</td>
            <td>@item.Telefono</td>
            <td>@item.Direccion</td>
            <td>@item.FechaAlta.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
