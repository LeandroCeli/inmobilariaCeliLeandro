@model inmobilariaCeli.Models.Inquilino
@{
    ViewData["Title"] = "Eliminar inquilino";
}

<h2>Eliminar inquilino</h2>

<div class="alert alert-warning">
    <p>¿Estás seguro de que querés eliminar al siguiente inquilino?</p>
</div>

<div class="mb-3">
    <strong>Nombre:</strong> @Model.NombreCompleto<br />
    <strong>DNI:</strong> @Model.DNI<br />
    <strong>Email:</strong> @Model.Email<br />
    <strong>Teléfono:</strong> @Model.Telefono<br />
</div>

<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>